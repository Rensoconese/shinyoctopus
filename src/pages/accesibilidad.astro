    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(255, 255, 255, 0.45);
    border-bottom-color: rgba(255, 255, 255, 0.15);
  }

  .pricing-table tbody th {
    width: 10rem;
    font-weight: 500;
    color: #fff;
  }

  /* Closing CTA */
  .closing {
    border-bottom: 0;
    text-align: center;
    padding: 5rem 0 4rem;
  }

  .closing h2 {
    max-width: 36rem;
    margin-left: auto;
