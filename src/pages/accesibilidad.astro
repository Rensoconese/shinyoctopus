    max-width: 32rem;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 2.5rem;
  }

  section:last-of-type {
    border-bottom: none;
  }

  @media (max-width: 48rem) {
    .content-page {
      padding-top: 5.5rem;
    }

    .page-header {
      margin-bottom: 2.5rem;
      padding-bottom: 2rem;
    }

    section {
      padding: 2.5rem 0;
    }

    .calculator-layout {
      grid-template-columns: 1fr;
      padding: 1.25rem;
      gap: 1.5rem;
    }

    .results {
      position: static;
      padding: 1.25rem;
    }

    .plans-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
